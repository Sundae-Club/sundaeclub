<!DOCTYPE html>
<html>
  <head>
    <title>Sundaeclub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.typekit.net/mlt3byj.css">

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= yield :head %>
    <%= turbo_include_tags %>
    <%= stimulus_include_tags %>
  </head>

  <body class="bg-gray-50">
    <div class="h-2 bg-white shadow">
      <div class="container">
        <% if current_user %>
          <%= current_user.email %>
        <% else %>
          <%= link_to 'Sign In', new_session_path(:user) %>
        <% end %>
      </div>
    </div>

    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
